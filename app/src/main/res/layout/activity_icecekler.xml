<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_icecekler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/arkaplan"
    tools:context="com.example.bushr.kaloritakibi.Icecekler">

    <RadioButton
        android:text="Coca Cola (Pors Boy :330mL)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:id="@+id/radioButton4"
        android:textStyle="normal|bold|italic"
        android:textSize="30sp"
        android:textColor="?attr/colorControlActivated"
        android:onClick="ColaClick" />

    <TextView
        android:text="Kalori:148 kCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton4"
        android:layout_alignLeft="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/black" />

    <RadioButton
        android:text="Ayran (Pors Boy :250mL)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_marginTop="42dp"
        android:id="@+id/radioButton5"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_green_dark"
        android:onClick="AyrnClick" />

    <TextView
        android:text="Kalori: 95 kCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/black"
        android:layout_below="@+id/radioButton5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <RadioButton
        android:text="Karışık Meyve Suyu (Pors Boy:500mL)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textColor="@android:color/holo_blue_bright"
        android:onClick="MeyvesuClick" />

    <Button
        android:text="Ansayfaya Dön"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Kalori: 240 kCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/black"
        android:layout_below="@+id/radioButton6"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />
</RelativeLayout>
